<% include ./partials/header.ejs %>

<header>
    <nav class="navbar navbar-expand-lg navbar-light green fixed-top scrolling-navbar">

        <div class="container">

            <a class="navbar-brand" href="/">
                <img src="/img-futiba-club/logo.png" height="30" alt="Futiba Club">
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent-7">

                <% include ./partials/menu.ejs %>
            </div>
            <!-- Navbar Collapse -->

        </div>
        <!-- Container -->

    </nav>

</header>

<section class="content" >

            <div class="container">

                <h2>Classificação:</h2>

                <% if(classifications) { %>

                <table class="table table-striped text-center">

                    <thead>

                        <tr>
                            <th>Nome</th>

                            <th>Pontuação</th>
                        </tr>

                    </thead> <!-- Table Head -->

                    <tbody>

                        <% classifications.forEach(item => { %>

                        <tr>

                            <td><%= item.name %></td>

                            <td><%= (item.score ? item.score : 0) %></td>
                        </tr>

                        <% }) %>

                    </tbody> <!-- Table Body -->

                </table> <!-- Table -->

                <% } else { %>

                    <p>Não há nenhum jogo ou aposta em andamento</p>

                <% } %>

            </div> <!-- Container -->

        </section> <!-- Section -->

