
<!-- Inside of a group -->

<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Futiba Club</title>

    <!-- Font Awesome -->

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Bootstrap -->

    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- Material Design Bootstrap -->

    <link href="/css/mdb.min.css" rel="stylesheet">

    <!-- Your Custom Styles -->

    <link href="/css/style.css" rel="stylesheet">

    <link href="/css/futiba-interno.css" rel="stylesheet">

</head>

<body>

<header>

    <nav class="navbar navbar-expand-lg navbar-light green fixed-top scrolling-navbar">

        <div class="container">

            <a class="navbar-brand" href="/">
                <img src="/img-futiba-club/logo.png" height="30" alt="Futiba Club">
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7"
                    aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent-7">

                <% include partials/menu %>

            </div> <!-- Navbar Collapse -->

        </div> <!-- Container -->

    </nav> <!-- Navbar -->

</header> <!-- Header -->

<section class="content">

    <div class="container">

        <div class="row">
            <h4><%= group.name %></h4>
        </div>

        <% if (users.length > 0) { %>
            <table class="table table-striped text-center">

            <thead>
            <tr>
                <th>Nome</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
            </thead>

            <tbody>
            <% users.forEach( user => { %>
            <tr>
                <td>
                    <%= user.name %>
                </td>
                <td style="text-transform: capitalize;"><%= user.role %></td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/admin/grupos/<%= group.id %>/aceitar/<%= user.user_id %>"> <!-- Id of that relation groups -> users -->
                        Permitir
                    </a>

                    <a class="btn btn-sm btn-danger" href="/admin/grupos/<%= group.id %>/negar/<%= user.user_id %>">
                        Negar
                    </a>

                </td>
            </tr>
            <% })%>

            </tbody>

        </table>
        <% } else { %>
            <p style="font-weight: bold">Nenhum usuário pendente.</p>
        <% } %>

    </div> <!-- Container -->

</section> <!-- Content -->

<!-- JQuery -->

<script type="text/javascript" src="/js/jquery-3.2.1.min.js"></script>

<!-- Bootstrap Tool Tips -->

<script type="text/javascript" src="/js/popper.min.js"></script>

<!-- Bootstrap Core Js -->

<script type="text/javascript" src="/js/bootstrap.min.js"></script>

<!-- Mdb Code Js -->

<script type="text/javascript" src="/js/mdb.min.js"></script>

</body>

</html>
