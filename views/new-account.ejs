<% include ./partials/header.ejs %>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light green fixed-top scrolling-navbar">

            <div class="container">

                <a class="navbar-brand" href="/">
                    <img src="/img-futiba-club/logo.png" height="30" alt="Futiba Club">
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent-7">
                    <% include ./partials/menu.ejs %>
                </div>
                <!-- Navbar Collapse -->

            </div>
            <!-- Container -->

        </nav>
        <!-- Navbar -->

    </header>
    <!-- Header -->

    <section class="content">

        <div class="container">

            <% include ./partials/messageValidation %>
            
            <div class="row">

                <form class="col" method="post">

                    <div class="md-form">

                        <i class="fa fa-user prefix grey-text"></i>

                        <input type="text" id="orangeForm-name"
                         class="form-control" name="name" value='<%= name %>'>

                        <label for="orangeForm-name">Seu nome</label>

                    </div>
                    <!-- Name Create Account -->

                    <div class="md-form">

                        <i class="fa fa-envelope prefix grey-text"></i>

                        <input type="text" id="orangeForm-email" 
                        class="form-control" name="email" value='<%= email %>'>

                        <label for="orangeForm-email">Seu e-mail</label>

                    </div>
                    <!-- E-mail Create Account -->

                    <div class="md-form">

                        <i class="fa fa-lock prefix grey-text"></i>

                        <input type="password" id="orangeForm-pass" 
                            class="form-control" name="password"
                            value='<%= password %>'>

                        <label for="orangeForm-pass">Sua senha</label>

                    </div>
                    <!-- Password Create Account -->

                    <div class="text-center">

                        <button class="btn btn-deep-orange">Criar</button>

                    </div>

                </form>
                <!-- Create Account -->

            </div>
            <!-- Container -->

        </div>

    </section>

<% include ./partials/footer.ejs %>